<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_gonglve_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gonglve_banner_image_url1"
            android:layout_width="150dp"
            android:layout_height="87dp"/>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="87dp">

            <TextView
                android:id="@+id/tv_recyclerView_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="日复一签" />

            <TextView
                android:id="@+id/tv_recyclerView_author1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                tools:text="上上签" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_gonglve_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gonglve_banner_image_url2"
            android:layout_width="150dp"
            android:layout_height="87dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="87dp">

            <TextView
                android:id="@+id/tv_recyclerView_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="日复一签" />

            <TextView
                android:id="@+id/tv_recyclerView_author2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                tools:text="上上签" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_gonglve_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_gonglve_banner_image_url3"
            android:layout_width="150dp"
            android:layout_height="87dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="87dp">

            <TextView
                android:id="@+id/tv_recyclerView_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                tools:text="日复一签" />

            <TextView
                android:id="@+id/tv_recyclerView_author3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                tools:text="上上签" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="@drawable/chakanquanbu"
        android:textColor="@color/rb_text_color"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/tv_lanmu_chakanquanbu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="点击查看全部"
        android:textSize="18sp"/>
</LinearLayout>