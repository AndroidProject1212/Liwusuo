<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/gonglue_bottom_guessyoulike_img"
        android:layout_width="320dp"
        fresco:roundedCornerRadius="5dp"
        android:layout_height="140dp" />
    <TextView
        android:id="@+id/gonglue_bottom_guessyoulike_title"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/gonglue_bottom_guessyoulike_img"
        android:layout_marginBottom="5dp"
        android:textColor="@color/WhiteBackgroud"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignLeft="@id/gonglue_bottom_guessyoulike_img"
        android:layout_alignRight="@id/gonglue_bottom_guessyoulike_img"
        tools:text="把数码创意生活送"
        android:layout_height="wrap_content" />
</RelativeLayout>